<%- layout("/layouts/boilerplate.ejs") -%>

<body class="bg-light">
  <div class="container mt-5 mb-5">
    <div class="row justify-content-center">
      <div class="col-md-4">

        <h2 class="mb-2 text-center">Edit Listing</h2>

        <form action="/listing/<%= editlisting._id %>?_method=PUT" method="POST" class="p-4 border rounded shadow-sm bg-white needs-validation" novalidate enctype="multipart/form-data">
           
          <!-- Title -->
          <div class="mb-1">
            <label for="title" class="form-label">Listing Title</label>
            <input type="text" class="form-control" id="title" name="listing[title]" value="<%= editlisting.title %>" required>
         <div class="valid-feedback">Title looks good!</div>
          </div>

          <!-- Description -->
          <div class="mb-1">
            <label for="description" class="form-label">Description</label>
            <textarea class="form-control" id="description" name="listing[description]" rows="3"><%= editlisting.description %></textarea>
              <div class="invalid-feedback">please enter a short description</div>
          </div>

          <!-- Image -->
           <div class="mb-3 mt-3">
          <label for="image">  Original Image :</label>
            <img src="<%= editlisting.image.url %>" style="width: 150px; height: 100px;"  alt="">
           </div>
          <div class="mb-2 mt-2">
            <label for="image" class="form-label">Upload New Image</label>
            <input type="file" class="form-control" id="image" name="listing[image]" value="<%= editlisting.image.url %>" required >
          </div>

          <!-- Price -->
          <div class="mb-1">
            <label for="price" class="form-label">Price (â‚¹)</label>
            <input class="form-control" id="price" name="listing[price]" value="<%= editlisting.price %>" required>
            <div class="invalid-feedback">Price should be valid</div>
          </div>

          <!-- Location -->
          <div class="mb-1">
            <label for="location" class="form-label">Location</label>
            <input type="text" class="form-control" id="location" name="listing[location]" value="<%= editlisting.location %>" required>
              <div class="invalid-feedback">location should be valid</div>
          </div>

          <!-- Country -->
          <div class="mb-1">
            <label for="country" class="form-label">Country</label>
            <input type="text" class="form-control" id="country" name="listing[country]" value="<%= editlisting.country %>" required>
             <div class="invalid-feedback">country name should be valid</div>
          </div>

          <!-- Submit -->
          <div class="d-grid">
            <button type="submit" class="btn btn-warning">Update Listing</button>
          </div>
        </form>

      </div>
    </div>
  </div>
</body>
